<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Simple Sidebar - Start Bootstrap Template</title>

  <!-- Bootstrap core CSS -->
  <link href="/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/admin/css/simple-sidebar.css" rel="stylesheet">

</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading"><a href="/admin/index">HOME</a></div>
      <div class="list-group list-group-flush">
        <a href="business" class="list-group-item list-group-item-action bg-light">운송사목록</a>
        <a href="carType" class="list-group-item list-group-item-action bg-light">운송사 차량 정보</a>
        <a href="carTime" class="list-group-item list-group-item-action bg-light">차량 운행 정보</a>
        <a href="#" class="list-group-item list-group-item-action bg-light">tPH</a>
        <a href="user" class="list-group-item list-group-item-action bg-light">회원목록</a>
        <a href="#" class="list-group-item list-group-item-action bg-light">Status</a>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">Hide Nav</button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <a class="nav-link" href="/admin/index">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Dropdown
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/">AZ369</a>
                <a class="dropdown-item" href="#">Another action</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Something else here</a>
              </div>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container-fluid">
        <h2 class="mt-4">차량 운송사 수정 (Business)</h2>
          <div class="container col-md-6">
            <form>           
                <label for="bId">B_ID:</label>
                <input type="bId" class="form-control" id="bId" name="bId" value="<%=data.B_ID%>" readonly="readonly">             
                <label for="name">B_Name:</label>
                <input type="name" class="form-control" id="name" name="name" value="<%=data.B_Name%>">              
                <label for="Tel">B_Tel:</label>
                <input type="Tel" class="form-control" id="tel" name="tel" value="<%=data.B_Tel%>">
             
                <label for="Fax">B_Fax:</label>
                <input type="Fax" class="form-control" id="fax" name="fax" value="<%=data.B_Fax%>">

                <label for="eMail">B_eMail:</label>
                <input type="eMail" class="form-control" id="eMail" name="eMail" value="<%=data.B_Email%>">

                <label for="zip">B_Zip:</label>
                <input type="zip" class="form-control" id="zip" name="zip" value="<%=data.B_Zip%>">

                <label for="addr1">B_Addr1:</label>
                <input type="addr1" class="form-control" id="addr1" name="addr1" value="<%=data.B_Addr1%>">

                <label for="addr2">B_Addr2:</label>
                <input type="addr2" class="form-control" id="addr2" name="addr2" value="<%=data.B_Addr2%>">

                <label for="cDt">B_cDt:</label>
                <input type="cDt" class="form-control" id="cDt" name="cDt" value="<%=data.B_cDt%>" readonly="readonly">
            </form>       
            <button type="button" class="btn btn-primary" onclick="modify()">수정</button>   
          </div>
      </div>
    </div>
    <!-- /#page-content-wrapper -->
</div>
  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <script>
    function modify(){
      $.ajax({
        url: "/admin/business/modify",
        method: 'post',
        dataType: 'json',
        data: {
            'bId' : $("#bId").val(), 'bName' : $("#name").val(), 'bTel' : $('#tel').val(),
            'bFax' : $("#fax").val(), 'bEmail' : $("#eMail").val(), 'bZip' : $('#zip').val(),
            'bAddr1' : $("#addr1").val(), 'bAddr2' : $("#bAddr2").val()
            },
            success: function(res){
              if(res.data == "수정"){
                alert("수정완료");
                location.href="/admin/business";
              }
            }
      })
    }

  </script>

  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>

</body>

</html>
