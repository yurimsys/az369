    <script>
      
        $(document).ready(function() {
            /*agreement 전체동의 체크*/
            $('.check-all').click(function() {
                $('.ab').prop('checked', this.checked);
            });

            let payment_result = JSON.parse( sessionStorage.getItem("payment_result") );
            
            $("#order_price").text( payment_result.price );
            // $("#order_ph_type").text( payment_result.ph_type );
            $("#order_ph_type").text( '무료예약' );
            $("#order_deptTe").text( payment_result.deptTe );

            sessionStorage.removeItem("payment_result");
            sessionStorage.removeItem("ct_id");
            sessionStorage.removeItem("car_list");
        });
    </script>
