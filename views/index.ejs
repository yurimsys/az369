    <script>

        $(document).ready(function(){

            function getCookie(name) {
                var value = document.cookie.match('(^|;) ?' + name + '=([^;]*)(;|$)');
                return value? value[2] : null;
            }

            //현재 쿠키값 가져오기
            let my_cookie = getCookie('popup_check');
            // console.log('mycookie',my_cookie);

            if(my_cookie == 'true'){
