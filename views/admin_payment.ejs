<!-- Menu Toggle Script -->
<script>
  let currentPage = 1;
  //전체 페이지 수
  $.ajax({
    url : "/admin/payment/count",
    method : "post",
    async : false,	
    success : function(res){
      for(i=1; i<Math.ceil(res.data[0].cnt/10)+1; i++){
        let html ="<a href=/admin/payment/"+i+" style='font-size: 30px;'>"+i+"</a>&emsp;";
        $("#link2").append(html);       
      }
    }       
  });		


  //이전버튼
  $("#preBtn").click(function(){
    if(i == 1){
      alert("첫 페이지 입니다.");
      return;
    }
      
    location.href="/admin/payment/"+i-1;
  });
    //다음버튼
  $("#nextBtn").click(function(){
    currentPage += 1;
    location.href="/admin/paymnet/"+i+1;
  });



  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
</script>




