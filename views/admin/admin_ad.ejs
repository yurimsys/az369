
<%- contentFor('HeaderCss') %>

<%- contentFor('body') %>
<section class="main-container">
	<!--Page Title-->
	<div class="header">
		<div class="header-content d-flex">
			<div class="page-title">
				<%= title %>
			</div>
			<div class="page-title-desc">
				<% if(description) {%>
					<%=description %>
				<% } %>
			</div>
		</div>
	</div>
	<!--/Page Title-->
	<!-- 상세정보 -->
	<div class="card object-info">
		<div class="card-header">
			<div class="row">
				<div class="col-8">
					<a data-toggle="collapse" href="#object_detail_group"><span class="title">상세정보</span></a>
				</div>
				<div class="col-4">
					<div class="float-right action-btns action-new">
						<div class="btn btn-new px-4" onclick=objectInfo("new")>신규</div>
						<div class="btn btn-modify px-4 disabled">수정</div>
						<div class="btn btn-save px-4">저장</div>
						<div class="btn btn-delete px-4 disabled" data-toggle="modal" data-target="#staticBackdrop">삭제</div>
					</div>
				</div>
			</div>
		</div>
		<div id="object_detail_group" class="card-body collapse show">
			<form>
				<div class="form-group row">
					<label class="col-1 col-form-label">ID</label>
					<div class="col-4">
						<span id="ad_id"></span>
					</div>
					<label for="inputAdFiles" class="col-1 col-form-label">사진첨부</label>
					<div class="col-4">
						<input type="file" class="form-control" id="inputAdFiles">
					</div>
				</div>
				<div class="form-group row">
					<label for="selectBrand" class="col-1 col-form-label">브랜드</label>
					<div class="col-4">
						<select class="form-control select2" id="selectBrand">
							<option></option>
						</select>
					</div>
					<label for="ad_content_url" class="col-1 col-form-label">URL</label>
					<div class="col-4">
						<span id="ad_content_url"></span>
					</div>
				</div>
				<div class="form-group row">
					<label for="selectAdCategory" class="col-1 col-form-label">광고업종</label>
					<div class="col-4">
						<select class="form-control select2" id="selectAdCategory">
							<option></option>
						</select>
					</div>
					<label class="col-1 col-form-label">광고기간</label>
					<div class="col-4 form-row mx-0">
						<div type="" class="form-control col-5" id="ad_duration_start"></div>
						<span class="col-2 text-center">&#126;</span>
						<div type="" class="form-control col-5" id="ad_duration_final"></div>
					</div>
				</div>
				<div class="form-group row">
					<label for="selectAdType" class="col-1 col-form-label">광고위치</label>
					<div class="col-4">
						<select class="form-control select2" id="selectAdType">
							<option></option>
						</select>
					</div>
					<label for="inputAdTitle" class="col-1 col-form-label">광고제목</label>
					<div class="col-4">
						<input type="text" class="form-control" id="inputAdTitle">
					</div>
				</div>
			</form>
		</div>
	</div>
	<!-- /상세정보 -->
	<!-- 테이블 -->
	<div class="card object-table">
		<div class="card-body container-flud">
			<div class="demo-container">
				<div id="gridContainer"></div>
			</div>
		</div>
	</div>
	<!-- /테이블 -->

</section>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
	mbutton
</button>
  
  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
	  <div class="modal-content">
		<div class="modal-header">
		  <h5 class="modal-title" id="staticBackdropLabel"></h5>
		  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span class="material-icons">close</span>
		  </button>
		</div>
		<div class="modal-body text-center">
		  선택하신 광고를 삭제하시겠습니까?
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-danger">삭제</button>
			<button type="button" class="btn btn-normal" data-dismiss="modal">취소</button>
		</div>
	  </div>
	</div>
  </div>
<%- contentFor('FooterJs') %>