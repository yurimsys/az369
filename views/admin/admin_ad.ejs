
<%- contentFor('HeaderCss') %>

<%- contentFor('body') %>
<section class="main-container">
	<!--Page Title-->
	<div class="header">
		<div class="header-content d-flex">
			<div class="page-title">
				<%= title %>
			</div>
			<div class="page-title-desc">
				<% if(description) {%>
					<%=description %>
				<% } %>
			</div>
		</div>
	</div>
	<!--/Page Title-->
	<!-- 상세정보 -->
	<div class="card object-info">
		<div class="card-header">
			<div class="row">
				<div class="col-8">
					<a data-toggle="collapse" href="#object_detail_group"><span class="title">상세정보</span></a>
				</div>
				<div class="col-4">
					<div class="float-right action-btns action-new">
						<div class="btn btn-new px-4">신규</div>
						<div class="btn btn-modify px-4">수정</div>
						<div class="btn btn-save px-4">저장</div>
						<div class="btn btn-delete px-4">삭제</div>
					</div>
				</div>
			</div>
		</div>
		<div id="object_detail_group" class="card-body collapse show">
			<form>
				<div class="form-group row">
					<label class="col-1 col-form-label">ID</label>
					<div class="col-4">
						<span id="ad_id"></span>
					</div>
					<label for="inputAdFiles" class="col-1 col-form-label">사진첨부</label>
					<div class="col-4">
						<input type="file" class="form-control" id="inputAdFiles">
					</div>
				</div>
				<div class="form-group row">
					<label for="selectBrand" class="col-1 col-form-label">브랜드</label>
					<div class="col-4">
						<select class="form-control select2" id="selectBrand">
							<option></option>
						</select>
					</div>
					<label for="inputURL" class="col-1 col-form-label">URL</label>
					<div class="col-4">
						<input type="email" class="form-control" id="inputURL">
					</div>
				</div>
				<div class="form-group row">
					<label for="selectAdCategory" class="col-1 col-form-label">광고업종</label>
					<div class="col-4">
						<select class="form-control select2" id="selectAdCategory">
							<option></option>
						</select>
					</div>
					<label class="col-1 col-form-label">광고기간</label>
					<div class="col-4 form-row">
						<div type="" class="form-control col-5" id="display_duration_start"></div>
						<span class="col-2 text-center">&#126;</span>
						<div type="" class="form-control col-5" id="display_duration_final"></div>
					</div>
				</div>
				<div class="form-group row">
					<label for="selectAdType" class="col-1 col-form-label">광고위치</label>
					<div class="col-4">
						<select class="form-control select2" id="selectAdType">
							<option></option>
						</select>
					</div>
					<label for="selectAdTitle" class="col-1 col-form-label">광고제목</label>
					<div class="col-4">
						<input type="text" class="form-control" id="selectAdTitle">
					</div>
				</div>
			</form>
		</div>
	</div>
	<!-- /상세정보 -->
	<!-- 테이블 -->
	<div class="card object-table">
		<div class="card-body container-flud">
			<div class="demo-container">
				<div id="gridContainer"></div>
			</div>
		</div>
	</div>
	<!-- /테이블 -->

</section>
		
<%- contentFor('FooterJs') %>