<!DOCTYPE html>
<html lang="en">

<head>

  <% include templates/admin_head.ejs %>
  <title>Admin-Business</title>
</head>
<body>
  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <% include templates/admin_sidebar.ejs %>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
      <!-- navi -->
      <% include templates/admin_nav.ejs %>

      <div class="container-fluid">
        <h1 class="mt-4">차량 운송사 추가 (Business)</h1>

            <div class="continer col-md-6">
                <ul>
                    <li>
                        <label>B_Name</label>
                        <input type="text" class="form-control form-control" id="name">
                    </li>
                    <li>
                        <label>B_Tel</label>
                        <input type="text" class="form-control form-control" id="tel">
                    </li>
                    <li>
                        <label>B_Fax</label>
                        <input type="text" class="form-control form-control" id="fax">
                    </li>
                    <li>
                        <label>B_Email</label>
                        <input type="text" class="form-control form-control" id="email">
                    </li>
                    <div class="address_form">
                        <div style="display: inline;">
                            <input type="text" id="postcode"  name="postcode" placeholder="매장 우편번호" style="background: #f8f8f8; width: 400px;">
                            <button type="button" onclick="execDaumPostcode()" value="우편번호 찾기" class="btn btn-primary">우편번호찾기</button><br>
                        </div>
                        <input type="text" class='form-control form-control' id="address" name="address" placeholder="매장주소" style="background: #f8f8f8;"><br>
                        <input type="text" class='form-control form-control' id="detailAddress" name="detailAddress" placeholder="매장상세주소">
                        <input type="text" id="extraAddress" name="extraAddress" hidden=""> <!-- 기본정보  -->
                        <input type="text" id="roadAddress" name="roadAddress" hidden="">
                        <input type="text" id="jibunAddress" name="jibunAddress" hidden="">
                    </div>
                </ul>
                <button type="button" class="btn btn-primary" onclick="insert()">추가</button> 
            </div>
        
      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="/admin/js/join_address.js"></script>
<script src="https://t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>

<script>
    function insert(){
        $.ajax({
            url: "/admin/business/insert",
            method: 'post',
            dataType: 'json',
            data: {
                'name' : $("#name").val(), 'tel' : $("#tel").val(), 'fax' : $("#fax").val(),
                'email' : $("#email").val(), 'postcode' : $("#postcode").val(), 'address' : $("#address").val(),
                'detailAddress' : $("#detailAddress").val()
                },
            success: function(res){
                if(res.data == "추가"){
                location.href="business";
                }
            }
        })
    }

</script>
<!-- Menu Toggle Script -->
<script>
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
});
</script>

</body>

</html>
