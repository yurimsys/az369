		<% include templates/admin_footer.ejs %>
	</div>

</body>

<script>
	$(document).ready(function(){
	let table =$('#tList').DataTable({
		dom: 'l<"toolbar">frtip',
		ajax : '/admin/payment/List',
		deferRender: true,
		columnDefs : [
			{
				targets:0,
				className : 'dt-body-center'
			},
			{
				targets: 10,
				render: function(data, type, row){
					var test = row.CR_cDt;
					var test2 = test.split(' ',1)
					return test2;
										
				}
			},
			{
				targets: 12,
				render: function(data, type, row){
					return "<a id="+row.PH_ID+" value="+row.CR_Cancel+" name="+row.CR_Cancel+" class='icon-trash' data-toggle='modal' data-target='#modal_primary_header' onclick='cancel(this)' style='color:darkblue;'>&nbsp;취소</a>";
				}
			},
		],
		rowId : "PH_ID",
		columns : [
			{ 
				"data": null, 
				"render": function (data, type, full, meta) {
					return meta.row + 1
				}
			},
			{ "data": "U_UserName" },
			{ "data": "U_Name" },
			{ "data": "U_Phone" },
			{ "data": "PH_PG_Name" },
			{ "data": "PH_Price" },
			{ "data": "PH_OPrice"},
			{ "data": "PH_SPrice"},
			{ "data": "PH_Type"},
			{ "data": "CR_Cancel"},
			{ "data": "CR_cDt"},
			{ "data": "CR_CancelDt"},                            
			{ "data": null}
		]
	});
})

	function searchGo(){
		if($('#dept').val() != "" && $('#end').val() == ""){
			alert("기간을 입력하세요.");
			return;
		}
		if($('#dept').val() == "" && $('#end').val() != ""){
			alert("기간을 입력하세요.");
			return;
		}
		$('#tList').DataTable().clear().destroy();
		$('#tList').DataTable({
			dom: 'l<"toolbar">frtip',
			processing: true,
			ajax : {
				url : '/admin/payment/search',
				method: 'post',
				data : {
					'selectName' : $('#choi option:selected').val(), 'chkRad' : $("input:radio[name='radio-inline-left']:checked").val(),
					'selResult' : $('#selResult').val(), 'dept' : $('#dept').val(), 'end' : $('#end').val()
				}
			},
			deferRender: true,
			columnDefs : [
				{
					targets:0,
					className : 'dt-body-center'
				},
				{
					targets: 10,
					render: function(data, type, row){
						var test = row.CR_cDt;
						var test2 = test.split(' ',1)
						return test2;
											
					}
				},
				{
					targets: 12,
					render: function(data, type, row){
						return "<a id="+row.PH_ID+" class='icon-trash' data-toggle='modal' data-target='#modal_primary_header' onclick='cancel(this)' style='color:darkblue;'>&nbsp;취소</a>";
					}
				},
			],
			rowId : "PH_ID",
			columns : [
				{ 
					"data": null, 
					"render": function (data, type, full, meta) {
						return meta.row + 1
					}
				},
				{ "data": "U_UserName" },
				{ "data": "U_Name" },
				{ "data": "U_Phone" },
				{ "data": "PH_PG_Name" },
				{ "data": "PH_Price" },
				{ "data": "PH_OPrice"},
				{ "data": "PH_SPrice"},
				{ "data": "PH_Type"},
				{ "data": "CR_Cancel"},
				{ "data": "CR_cDt"},
				{ "data": "CR_CancelDt"},                            
				{ "data": null}
			]
		});
	}

	function cancel(e){
		$('#insertList').empty();
		if(e.getAttribute("value") === 'Y'){
			alert('이미 취소되었습니다.')
		}else{
			$.ajax({
				url: '/admin/cancelList',
				method: 'post',
				dataType: 'json',
				data: { phId : e.id},
				success: function(res){
					let html = '<label>아이디 :</label><input type="text" class="form-control" id="userName" value='+res.data.U_UserName+' name='+res.data.PH_ID+' readonly= "readonly" style="font-size: 20px; color: black;">  ';
						html += '<label>이름 :</label><input type="text" class="form-control" id="name" value='+res.data.U_Name+'  name='+res.data.PH_U_ID+' readonly= "readonly" style="font-size: 20px; color: black;">'
						html += '<label>운송사 :</label><input type="text" class="form-control" id="Bname" value='+res.data.B_Name+' readonly= "readonly" style="font-size: 20px; color: black;">'
						html += '<label>좌석개수 :</label><input type="text" class="form-control" id="carNum" value='+res.data.cnt+' readonly= "readonly" style="font-size: 20px; color: black;">'
						html += '<label>총 가격 :</label><input type="text" class="form-control" id="price"  value='+res.data.PH_Price+' readonly= "readonly" style="font-size: 20px; color: black;">'
						html += '<label>결제수단 :</label><input type="text" class="form-control" id="drPhone" value='+res.data.PH_Type+' readonly= "readonly" style="font-size: 20px; color: black;">'
						html += '<label>결제일 :</label><input type="text" class="form-control" id="drPhone" name="drPhone" value='+res.data.CR_cDt+' readonly= "readonly" style="font-size: 20px; color: black;">'
					$('#insertList').append(html);	
				}

			})
		}
	}

	function cancelPay(){
		$.ajax({
			url: '/admin/cancelPayment',
			method: 'post',
			dataType: 'json',
			data: {'phId': $("#userName").attr('name') ,'phUId': $("#name").attr('name')},
			success: function(res){
				location.reload();
			}
		})
	}
</script>
</html>
