<%- contentFor('HeaderCss') %>

<%- contentFor('Body') %>
<section class="main-container">
	<!--Page Title-->
	<div class="header">
		<div class="header-content d-flex">
			<div class="page-title">
				<%= title %>
			</div>
			<div class="page-title-desc">
				<% if(description) {%>
					<%=description %>
				<% } %>
			</div>
		</div>
	</div>
	<!--/Page Title-->
	<!-- 상세정보 -->
	<div class="card object-info">
		<div class="card-header">
			<div class="row">
				<div class="col-8">
					<a data-toggle="collapse" href="#object_detail_group"><span class="title">상세정보</span></a>
				</div>
				<div class="col-4">
					<div class="float-right action-btns action-new">
						<div name="new" class="btn btn-new px-4" onclick=objectInfo("new")>신규</div>
						<div name="modify" class="btn btn-modify px-4 disabled">수정</div>
						<div name="save" class="btn btn-save px-4">저장</div>
						<div name="delete" class="btn btn-delete px-4 disabled yr_modal_delete" data-toggle="modal" data-target="#deleteModal">삭제
						</div>
						<div name="folder" class="btn btn-folder px-4" id="folding" onclick="folding()"></div>
					</div>
				</div>
			</div>
		</div>


		<div id="object_detail_group" class="brand_info">
			<form enctype="multipart/form-data">
			<!-- 좌측 -->
				<div class='info_left'>
					
					<div>
						<label class='info_name'>로그인 아이디</label>
						<!-- <span id="ad_id"></span> -->
						<input type='text' id='login_id' class='long_box'>
					</div>
					<div>
						<label class='info_name'>비밀번호</label>
						<input type='text' id='login_pw' class='long_box'>
					</div>
					<div>
						<label class='info_name'>대표자명</label>
						<input type='text' id='ceo_name' class='long_box'>
					</div>
					<div>
						<label class='info_name'>대표 전화번호</label>
						<!-- <span id="ad_id"></span> -->
						<input type='number' id='ceo_phone' class='long_box'>
					</div>
					<hr class="info_line">
					<div>
						<label class='info_name'>대분류</label>
						<!-- <span id="ad_id"></span> -->
						<!-- <input type='text' class='long_box'> -->
						<select class='long_box' id='lv1_category'>
							<option value="null">대분류 선택</option>
						</select>
					</div>
					<div>
						<label class='info_name'>중분류</label>
						<!-- <span id="ad_id"></span> -->
						<!-- <input type='text' class='long_box'> -->
						<select class='long_box' id='lv2_category'>
							<option value="null">중분류 선택</option>
						</select>
					</div>
					<hr class="info_line">
					<div>
						<label class='info_name'>층</label>
						<select class='long_box' id='floor'>
							<option value="null">층 선택</option>
							<option id='1F' value="1F">1층</option>
							<option id='2F' value="2F">2층</option>
							<option id='3F' value="3F">3층</option>
						</select>
					</div>
					<div>
						<label class='info_name'>호실</label>
						<select class='long_box' id='store_number'>
							<option value="null">호실 선택</option>
						</select>
					</div>
					
				</div>
			<!-- 중간 -->
				<div class='info_center'>
					<div>
						<label class='info_name'>매장명</label>
						<input type="text" class='long_box' id='brand_ko' placeholder="한글">
						<label class='info_name'></label>
						<input type="text" class='long_box' id='brand_en' placeholder="영문">
					</div>
					<div style="margin-top: 1%;">
						<label class='info_name'>매장소개</label>
						<input type="text" class='long_box' id='brand_contents_ko' placeholder="한글">
						<label class='info_name'></label>
						<input type="text" class='long_box' id='brand_contents_en' placeholder="영문">
					</div>
					<div style="margin-top: 1%;">
						<label class='info_name'>매장 전화번호</label>
						<input type="number" class='long_box' id="brand_phone">
					</div>
					<div>
						<label class='info_name'>매장주소</label>
						<input type="text" id="postcode" name="postcode" placeholder="매장 우편번호"
								class='short_box'>
						<button type="button" onclick="execDaumPostcode()" value="우편번호 찾기"
							class="btn-primary round">우편번호찾기</button><br>
							<label class='info_name'></label>
						<input type="text" id="address" name="address" placeholder="매장주소" class='long_box'><br>
							<label class='info_name'></label>
						<input type="text" id="detailAddress" class='long_box' name="detailAddress" placeholder="매장상세주소">
						<input type="text" id="extraAddress" name="extraAddress" hidden=""> <!-- 기본정보  -->
						<input type="text" id="roadAddress" name="roadAddress" hidden="">
						<input type="text" id="jibunAddress" name="jibunAddress" hidden="">
					</div>
					
					<div style="margin-top: 1%;">
						<label class='info_name'>영문 도로명주소</label>
						<input type="text" class='long_box' id='address_en' placeholder="도로명">
					</div>
					<div>
						<label class='info_name'>영문 상세주소</label>
						<input type="text" class='long_box' id='detail_address_en' placeholder="상세">
					</div>
				</div>

			<!-- 우측 -->
				<div class='info_right'>
					<div>
						<label class='info_name'>평일 영업시간</label>
						<input type='text' class='short_box' id='main_open'>
						<input type="text" class='short_box' id='main_close'>
					</div>
					<div>
						<label class='info_name'>주말 영업시간</label>
						<input type='text' class='short_box' id='sub_open'>
						<input type="text" class='short_box' id='sub_close'>
					</div>
					<div >
						<label class='info_name'>점심시간</label>
						<input type='text' class='short_box' id='break_open'>
						<input type="text" class='short_box' id='break_close'>
					</div>
					<div>
						<label class='info_name'>휴무일</label>
						<input type='text' class='long_box' id='personal_day_ko' placeholder="한글">
						<label class='info_name'></label>
						<input type="text" class='long_box' id='personal_day_en' placeholder="영문">
					</div>
					<hr class='info_line'>
					<div>
						<label class='info_name'>매장 이미지 관리</label>
						<input type="file" id='store_img' name='store_img'>
					</div>
					
					<div>
						<label class='info_name'>이미지 URL</label>
						<span class="ad_content_url" id="img_url"></span>
					</div>
					<div>
						<label class='info_name'>매장 썸네일 관리</label>
						<input type="file" id="store_thumb" name="store_thumb">
					</div>
					<div>
						<label class='info_name'>썸네일 URL</label>
						<span class="ad_content_url" id="tumb_url"></span>
					</div>

				</div>
			</form>
		</div>
	</div>
	<!-- /상세정보 -->
	<!-- <div class="btn" data-toggle="modal" data-target="#deleteModal">검색 모달</div> -->
	
	<!-- 테이블 -->
	<div class="card object-table">
		<div class="card-body container-flud">
			<div id="mgmt-table"></div>
		</div>
	</div>
	<!-- /테이블 -->

</section>

<%- contentFor('Modal') %>
<!-- 삭제 Modal -->
<div class="modal fade" id="deleteModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog"
	aria-labelledby="ModalTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="ModalTitle"></h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span class="material-icons">close</span>
				</button>
			</div>
			<div class="modal-body text-center">
				선택하신 매장을 삭제하시겠습니까?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal" onclick="deleteAD()">삭제</button>
				<button type="button" class="btn btn-normal" data-dismiss="modal">취소</button>
			</div>
		</div>
	</div>
</div>


<!-- Confirm Modal -->
<div class="modal fade" id="confirmModal" data-backdrop="static" tabindex="-1" role="dialog"
	aria-labelledby="ModalTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="ModalTitle"></h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span class="material-icons">close</span>
				</button>
			</div>
			<div class="modal-body text-center message">
				등록하시겠습니까?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-normal" data-dismiss="modal">취소</button>
				<button type="button" class="btn btn-success" data-dismiss="modal">확인</button>
			</div>
		</div>
	</div>
</div>

<!-- 상세검색 -->
<div class="card object-search-popup" id="object-search-popup" style="display: none;">
	<div class="card-header object-search-header">
		<div class="row">
			<div class="col-8 search-header-title">
				<a data-toggle="collapse" href="#object_search_info"><span class="title">상세검색</span></a>
			</div>
			<div class="col-4">
				<div class="float-right action-btns action-new">
					<div name="reset" class="btn btn-reset px-4" onclick="searchPopupReset()">초기화</div>
				</div>
			</div>
		</div>
	</div>
	<div id="object_search_info" class="card-body collapse show">
		<form>
			<!-- <div class="form-group row">
				<label class="col-3 col-form-label">ID</label>
				<div class="col-9">
					<input type="text" class="form-control" id="inputID" />
				</div>
			</div> -->
			<div class="form-group row">
