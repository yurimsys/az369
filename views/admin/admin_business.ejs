<!DOCTYPE html>
<html lang="en">

<head>

  <% include templates/admin_head.ejs %>
  <title>Admin-Business</title>
</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <% include templates/admin_sidebar.ejs %>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <!-- navi -->
      <% include templates/admin_nav.ejs %>

      <div class="container-fluid">
        <h1 class="mt-4">차량 운송사 관리 (Business)</h1>
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>B_ID</th>
                        <th>B_Name</th>
                        <th>B_Tel</th>
                        <th>B_Fax</th>
                        <th>B_Email</th>
                        <th>B_Zip</th>
                        <th>B_Addr1</th>
                        <th>B_Addr2</th>
                        <th>B_cDt</th>
                        <th>B_uDt</th>
                        <th>Modify</th>
                        <th>Delete</th>
                    </tr>
                </thead>              
                                
                <tbody id="bList"> 
                <% for(let i=0; i<data.length; i++){ %>
                    <tr>
                        <td><%=data[i].B_ID%></td>
                        <td><%=data[i].B_Name%></td>
                        <td><%=data[i].B_Tel%></td>
                        <td><%=data[i].B_Fax%></td>
                        <td><%=data[i].B_Email%></td>
                        <td><%=data[i].B_Zip%></td>
                        <td><%=data[i].B_Addr1%></td>
                        <td><%=data[i].B_Addr2%></td>
                        <td><%=data[i].B_cDt%></td>
                        <td><%=data[i].B_uDt%></td>
                        <td><a href='businessModify/<%=data[i].B_ID%>'>수정</a></td>
                        <td><a href='businessDelete/<%=data[i].B_ID%>'>삭제</a></td>
                    </tr>
                    <% } %>  
                </tbody>
            </table>
            <a href="businessInsert">운송사 추가</a>
      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>

</body>

</html>
