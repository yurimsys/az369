	$(document).ready(function(){
		
		let table =$('#tList').DataTable({
			dom: 'l<"toolbar">frtip',
			initComplete: function(){
				$("div.toolbar").html('<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal_primary_header">운송사 추가</button>');           
			}, 
		
			//serverSide: true,	
			//processing: true,
			//searching: true,
			ajax : '/admin/business/List',
			deferRender: true,
			columnDefs : [
				{
					targets:0,
					className : 'dt-body-center',
					"searchable": false,
            		"orderable": false,
				},
				{
					targets: 8,
					render: function(data, type, row){
						var test = row.B_cDt;
						var test2 = test.split(' ',1)
						return test2;
											
				}
				},
				{
					targets: 9,
					render: function(data, type, row){
						var test = row.B_uDt;
						var test2 = test.split(' ',1)
						return test2;
											
					}
				}
			],
			// start: 0,
			// pageLength: 10,
			rowId : "B_ID",
			columns : [
				{ 
					"data": null, 
					"render": function (data, type, full, meta) {
						return meta.row + 1
					}
				},
				{ "data": "B_Name" },
				{ "data": "B_Tel" },
				{ "data": "B_Fax" },
				{ "data": "B_Email" },
				{ "data": "B_Zip" },
				{ "data": "B_Addr1" },
				{ "data": "B_Addr2" },
				{ "data": "B_cDt" },
				{ "data": "B_uDt" },
				{ 
					data: null,
					className: 'B_ID',
					defaultContent: "<a class='icon-pencil6' data-toggle='modal' data-target='#modal_info_header' onclick='edit(this)' style='color:darkblue;'>Edit</a>"
			
				},
				{ 	
					data: null,
					className: 'B_ID',
					defaultContent: "<a class='icon-trash' data-toggle='modal' data-target='#modal_danger_header' onclick='del(this)' style='color:darkblue;'>Delete</a>"
				}
			]
		});
		table.on( 'order.dt search.dt', function () {
			table.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
				cell.innerHTML = i+1;
			} );
		} ).draw();
	})

	function searchGo(){
		if($('#dept').val() != "" && $('#end').val() == ""){
			alert("기간을 입력하세요.");
			return;
		}
		if($('#dept').val() == "" && $('#end').val() != ""){
			alert("기간을 입력하세요.");
			return;
		}
		$('#tList').DataTable().clear().destroy();
		$('#tList').DataTable({
			dom: 'l<"toolbar">frtip',
			initComplete: function(){
				$("div.toolbar").html('<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal_primary_header">운송사 추가</button>');           
			}, 
			processing: true,
			ajax : {
				url : '/admin/business/search',
				method: 'post',
				data : {
					'selectName' : $('#choi option:selected').val(), 
					'selResult' : $('#selResult').val(), 'dept' : $('#dept').val(), 'end' : $('#end').val()
				}
			},
			deferRender: true,
			columnDefs : [
				{
					targets:0,
					className : 'dt-body-center'
				},
				{
					targets: 8,
					render: function(data, type, row){
						var test = row.B_cDt;
						var test2 = test.split(' ',1)
						return test2;
											
				}
				},
				{
					targets: 9,
					render: function(data, type, row){
						var test = row.B_uDt;
						var test2 = test.split(' ',1)
						return test2;
											
					}
				}
			],
			start: 0,
			length: 50,
			pageLength: 10,
			rowId : "B_ID",
			columns : [
				{ 
					"data": null, 
					"render": function (data, type, full, meta) {
						return meta.row + 1
					}
				},
				{ "data": "B_Name" },
				{ "data": "B_Tel" },
				{ "data": "B_Fax" },
				{ "data": "B_Email" },
				{ "data": "B_Zip" },
				{ "data": "B_Addr1" },
				{ "data": "B_Addr2" },
				{ "data": "B_cDt" },
				{ "data": "B_uDt" },
				{ 
					data: null,
					className: 'B_ID',
					defaultContent: "<a class='icon-pencil6' data-toggle='modal' data-target='#modal_info_header' onclick='edit(this)''>Edit</a>"
			
				},
				{ 	
					data: null,
					className: 'B_ID',
					defaultContent: "<a class='icon-trash' data-toggle='modal' data-target='#modal_danger_header' onclick='del(this)'>Delete</a>"
				}			
			],

		});
	}
	
	
	//운송사 추가
		function insert(){
			$.ajax({
				url: '/admin/business/insert',
				method: 'post',
				dataType: 'json',
				data: {
					'name':$('#name').val(), 'tel' : $('#tel').val(), 'fax':$('#fax').val(), 'email':$('#email').val(),
					'zip':$('#postcode').val(), 'addr1':$('#address').val() , 'addr2':$('#detailAddress').val()
				},
				success: function(res){
				if(res.data == "추가"){
                location.reload();
                }
				}
			})
		}

		//수정                    		
		function edit(e){
			$('#moList').empty();
			$.ajax({
				url: '/admin/businessModify',
				method: 'post',
				dataType: 'json',
				data: {'bId' : e.parentElement.parentElement.id},
				success: function(res){
					console.log(res.data.B_Name)
					let	html = "<label for='name'>B_Name:</label><input type='name' class='form-control' id='name' value="+res.data.B_Name+">";
						html += "<label for='Tel'>B_Tel:</label><input type='Tel' class='form-control' id='tel' value="+res.data.B_Tel+">";
						html += "<label for='Fax'>B_Fax:</label><input type='Fax' class='form-control' id='fax' value="+res.data.B_Fax+">";
						html += "<label for='eMail'>B_eMail:</label><input type='eMail' class='form-control' id='eMail' value="+res.data.B_Email+">";
						html += "<label for='zip'>B_Zip:</label><input type='zip' class='form-control' id='zip' value="+res.data.B_Zip+">";												
						html += "<label for='addr1'>B_Addr1:</label><input type='addr1' class='form-control' id='addr1' value="+res.data.B_Addr1+">";
						html += "<label for='addr2'>B_Addr2:</label><input type='addr2' class='form-control' id='addr2' value="+res.data.B_Addr2+">";
						html += "<input type='bId' class='form-control' id='bId' value="+res.data.B_ID+" style='display: none;'>";
					$('#moList').append(html);	
				}
			})
			$('#modal_info_header').css('display','block');
		}

		$('#update').on('click',function(){
			$.ajax({
				url: "/admin/business/modify",
				method: 'post',
				dataType: 'json',
				data: {
					'bId' : $("#bId").val(), 'bName' : $("#name").val(), 'bTel' : $('#tel').val(),
					'bFax' : $("#fax").val(), 'bEmail' : $("#eMail").val(), 'bZip' : $('#zip').val(),
					'bAddr1' : $("#addr1").val(), 'bAddr2' : $("#bAddr2").val()
					},
					success: function(res){
					if(res.data == "수정"){
						//alert("수정완료");
						location.reload();
					}
				}
			})
		})


		//삭제
		function del(e){
			$('#delete').attr('val', e.parentElement.parentElement.id);
			$('#delete').on('click',function(){
				$.ajax({
					url: '/admin/businessDelete',
					method: 'post',
					dataType: 'json',
					data: {'bId' : e.parentElement.parentElement.id},
					success: function(res){
						//alert("삭제");
						location.reload()
					}
				})
			})
		}
	</script>
